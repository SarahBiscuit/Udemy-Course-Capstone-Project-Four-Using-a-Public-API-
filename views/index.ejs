<%- include("partials/header.ejs") %>

<div id="fireDiv">
    <div id="introTextBox">
        <h2><span><b>Fire</b></span></h2>
        <h5>Up your skills</h5>
        <h5>Do you know your game of thrones characters?</h5>
        <h5>Click on the 'Generate' button to generate a character in the box below</h5>
        <button id="charButton">Generate</button>
        <!-- Now need to add the functionality in the index.js to pull from the API and generate the character.  Will have an ice photo below 
         and add a box generating the character details on top of it.-->
    </div>
</div>

<div id="characterDiv">
<div id="characterScreen">
    <!-- placeholder text here for before character is generated, and then box populated when the character is generated. -->
     <% if (!locals.character) { %>
     <h2><span><b>Character not yet generated</b></span></h2> 
     <% } else { %>
     <li><h6><span><b>Name:</b></span> <%= name %></h6></li>
     <li><h6><span><b>Gender:</b></span> <%= gender %></h6></li>
     <li><h6><span><b>Born:</b></span> <%= DOB %></h6></li>
     <li><h6><span><b>Died:</b></span> <%= died %></h6></li>
     <li><h6><span><b>Aliases:</b></span> <%= nicknames.join(", ") %></h6></li>
     };

</div>
</div>